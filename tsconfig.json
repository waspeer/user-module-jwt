{
  "extends": "./node_modules/poetic/config/typescript/tsconfig.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "paths": {
      "~lib/*": ["lib/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "types": ["jest-extended", "node"]
  }
}
